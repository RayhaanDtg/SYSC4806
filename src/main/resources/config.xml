<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="mainPanel" class="App.BoxLayoutPanel"
          init-method="init">
        <property name="axis">
            <!--  "1" corresponds to BoxLayout.Y_AXIS -->
            <!--  Spring can access constants, but it's more complex -->
            <value>1</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="itemScrollPane"/>
                <ref bean="buttonPanel"/>
            </list>
        </property>
    </bean>
    <bean id="mainFrame" class="App.MainFrame" init-method="init">
        <property name="contentPane">
            <ref bean="mainPanel"/>
        </property>
        <property name="title">
            <value>My Address Book</value>
        </property>
    </bean>
    <bean id="itemScrollPane" class="javax.swing.JScrollPane">
        <constructor-arg>
            <ref bean="itemTable"/>
        </constructor-arg>
    </bean>
    <bean id="itemTable" class="javax.swing.JTable">
        <property name="model">
            <ref bean="itemTableModel"/>
        </property>
    </bean>
    <bean id="itemTableModel" class="App.ItemTableModel">
        <property name="addressBook">
            <ref bean="addressBook"/>
        </property>
    </bean>
    <bean id="buttonPanel" class=
            "App.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <!--  "0" corresponds to BoxLayout.X_AXIS -->
            <value>0</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="deleteButton"/>
                <ref bean="addNewButton"/>
            </list>
        </property>
    </bean>
    <bean id="deleteButton" class="App.ActionListenerButton"
          init-method="init">
        <property name="actionListener">
            <ref bean="deleteButtonActionListener"/>
        </property>
        <property name="text">
            <value>Delete buddy</value>
        </property>
    </bean>
    <bean id="deleteButtonActionListener"
          class="App.DeleteButtonActionListener">
        <property name="addressBook">
            <ref bean="addressBook"/>
        </property>
        <property name="table">
            <ref bean="itemTable"/>
        </property>
    </bean>
    <bean id="addNewButton" class="App.ActionListenerButton"
          init-method="init">
        <property name="actionListener">
            <ref bean="addNewButtonActionListener"/>
        </property>
        <property name="text">
            <value>Add buddy</value>
        </property>
    </bean>
    <bean id="addNewButtonActionListener"
          class="App.AddNewButtonActionListener">
        <property name="addressBook">
            <ref bean="addressBook"/>
        </property>
        <property name="table">
            <ref bean="itemTable"/>
        </property>
    </bean>
    <bean id="addressBook" class="App.AddressBook">

    </bean>

</beans>